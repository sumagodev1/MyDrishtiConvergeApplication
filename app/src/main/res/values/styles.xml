<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/chart_blue</item>
        <item name="android:windowBackground">@color/light_grey</item>
    </style>

    <!-- Professional Gauge theme -->
    <style name="ProfessionalGauge">
        <!-- SpeedView customizations -->
        <item name="sv_speedometerWidth">60dp</item>
        <item name="sv_textSize">24sp</item>
        <item name="sv_unitTextSize">12sp</item>
        <item name="sv_textColor">#212121</item>
        <item name="sv_unitTextColor">#757575</item>
        <item name="sv_unit">KW</item>
        <item name="sv_tickNumber">7</item>
        <item name="sv_backgroundCircleColor">#EEEEEE</item>
        <item name="sv_withTremble">false</item>
    </style>
    
    <!-- Simple Minimalist Gauge (like in image) -->
    <style name="SimpleGauge">
        <!-- SpeedView customizations for minimalist design -->
        <item name="sv_speedometerWidth">15dp</item>
        <item name="sv_backgroundCircleColor">#EEEEEE</item>
        <item name="sv_pointerColor">#2196F3</item>
        <item name="sv_tickNumber">7</item>
        <item name="sv_textColor">#000000</item>
        <item name="sv_centerCircleColor">#333333</item>
        <item name="sv_centerCircleRadius">12dp</item>
        <item name="sv_unitTextSize">0sp</item>
        <item name="sv_speedTextSize">0sp</item>
        <item name="sv_withTremble">false</item>
    </style>
    
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    <style name="cardElevated">
    <item name="cardCornerRadius">12dp</item>
    <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>