<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- Tutorial Content Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Highlight Icon -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_highlight"
                android:contentDescription="Highlight"
                android:tint="?attr/colorPrimary" />

            <!-- Tutorial Title -->
            <TextView
                android:id="@+id/tutorialTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/poppinsblackk"
                android:gravity="center"
                android:text="Feature Highlight"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Tutorial Message -->
            <TextView
                android:id="@+id/tutorialMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/pmedium"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="This feature helps you..."
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <!-- Button Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- Skip Button -->
                <Button
                    android:id="@+id/tutorialSkipButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/pmedium"
                    android:text="Skip"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp" />

                <!-- Next Button -->
                <Button
                    android:id="@+id/tutorialNextButton"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pmedium"
                    android:text="Continue"
                    android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
                    android:textSize="14sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Pulsing indicator for highlighted element -->
    <View
        android:id="@+id/pulseIndicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/pulse_circle"
        android:visibility="gone" />

</FrameLayout>