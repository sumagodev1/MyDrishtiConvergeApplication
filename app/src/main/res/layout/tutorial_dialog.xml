<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_rounded_background">

    <!-- Tutorial Icon -->
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_tutorial"
        android:contentDescription="Tutorial"
        android:tint="?attr/colorPrimary" />

    <!-- Tutorial Title -->
    <TextView
        android:id="@+id/tutorialTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppinsblackk"
        android:gravity="center"
        android:text="Tutorial Title"
        android:textColor="?attr/colorOnSurface"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Tutorial Message -->
    <TextView
        android:id="@+id/tutorialMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/pmedium"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:text="Tutorial message content goes here..."
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="14sp" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Skip Button -->
        <Button
            android:id="@+id/tutorialSkipButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/pmedium"
            android:text="Skip Tutorial"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp" />

        <!-- Next Button -->
        <Button
            android:id="@+id/tutorialNextButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pmedium"
            android:text="Next"
            android:textColor="?android:attr/textColorPrimaryInverseNoDisable"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            xmlns:app="http://schemas.android.com/apk/res-auto" />

    </LinearLayout>

</LinearLayout>