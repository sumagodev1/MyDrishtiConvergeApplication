<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/chartTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bar Chart Title" />

        <!-- Date/Month selection UI -->
        <LinearLayout
            android:id="@+id/dateMonthSelectionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/chartTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Date picker for hourly chart -->
            <LinearLayout
                android:id="@+id/dateSelectionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDateDisplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="20 May 2025"/>

                <ImageButton
                    android:id="@+id/btnDatePicker"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Pick a date"
                    android:tint="@color/colorPrimary"/>
            </LinearLayout>

            <!-- Month picker for daily chart -->
            <LinearLayout
                android:id="@+id/monthSelectionLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMonthDisplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="May 2025"/>

                <ImageButton
                    android:id="@+id/btnMonthPicker"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Pick a month"
                    android:tint="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/chartScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:scrollbars="none"
            android:fillViewport="true"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dateMonthSelectionLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:minWidth="@dimen/chart_min_width" />
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/chartInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/chartScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/siteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/darker_gray"
                    tools:text="Site Name" />

                <TextView
                    android:id="@+id/unitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    tools:text="kWh" />
            </LinearLayout>

            <TextView
                android:id="@+id/lastUpdated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_gravity="center_vertical|end"
                tools:text="Last updated: 15 May 2025, 10:30" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>